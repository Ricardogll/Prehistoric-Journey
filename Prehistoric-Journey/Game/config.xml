<!-- Config file for the game -->

<config>
  <app>
    <title>Game Development Testbed</title>
    <organization>UPC</organization>
  </app>
	
  <renderer>
    <vsync value="true"/>
  </renderer>

  <window>
    <resolution width="1024" height="640" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <file_system>
    <path>data.zip</path>
  </file_system>

  <map>
    <folder>maps/</folder>
  </map>
  
  <audio>
	<volume music="128" fx="128"/> <!-- 128 MAX volume, 0 min volume-->
  </audio>
	
  <player>
	<variables>
		<GRAVITY value="0.1"  />
		<SPEED_X value="2.5"/>
		<SPEED_Y value="0.25" />
		<ACCELERATION_X value="0.25" />
		<FRICTION value="0.25"/>
		<LIANA_SPEED value="1.0"/>
		<MAX_ACC_X value="0.5"/>
		<MAX_SPEED_X value="2.0"/>
		<JUMP_FORCE value="-5.0"/>
		<JUMP_FORCE_LIANA value="-4.0"/>
		
	</variables>
  </player>
</config>